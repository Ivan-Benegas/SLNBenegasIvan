@model IEnumerable<SistemaWebMisRecetas.Models.Receta>

@{
    ViewData["Title"] = "Index Receta";
}

@section SideBar{
    <ul>
        <li>@Html.ActionLink("Recetas", "Index", "Receta")</li>
        <li>@Html.ActionLink("Nueva", "Create", "Receta")</li>
        <li>@Html.ActionLink("Editar", "Index", "Receta")</li>
        <li>@Html.ActionLink("Eliminar", "Index", "Receta")</li>
    </ul>
}

<div class="crear-receta">@Html.ActionLink("Nueva", "Create", "Receta")</div>
<br>
<br>
<table>
    <tr>
        <th>Id</th>
        <th>Titulo</th>
        <th>Categoria</th>
        <th>Ingredientes</th>
        <th>Instrucciones</th>
        <th>Nombre del autor</th>
        <th>Apellido del autor</th>
        <th>Edad del autor</th>
        <th>Email del autor</th>
        <th>Editar</th>
        <th>Eliminar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink(item.Titulo, "Details", "Receta", new{id=item.Id})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrucciones)
            </td>
            <td>
                @Html.ActionLink(item.AutorNombre, "GetByNombre", "Receta", new{nombre=item.AutorNombre})
            </td>
            <td>
                @Html.ActionLink(item.AutorApellido, "GetByApellido", "Receta", new{apellido=item.AutorApellido})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorEdad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorEmail)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", "Receta", new{id=item.Id})
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", "Receta", new{id=item.Id})
            </td>
        </tr>
    }

</table>
